@model SistemaVentaDeRopaOnline.Models.Usuario;
@{
    ViewData["title"] = "Asignar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Añadir roles</h4>
        <h6>Asignar roles</h6>
    </div>
</div>

<form asp-action="AsignarRoles" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <input type="hidden" name="idUsuario" value="@Model.Id" />
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Email">Correo del usuario</label>
                        <input class="form-control" asp-for="Email" value="@Model.Email" disabled readonly style="border: 1px solid rgba(145, 158, 171, .32); height: 40px; width: 100%; font-size: 14px; font-weight: 500; color: #637381; padding: 10px 15px; border-radius: 5px">
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="rol">Roles disponibles</label>
                        <select name="rol" asp-items="ViewBag.RolesDisponibles" class="form-select"></select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-submit me-2">
                        <i class="bi bi-plus-lg" style="font-size: 21px; color: white"></i> Asignar Rol
                    </button>
                    <a asp-action="Listar" asp-controller="Usuario" class="btn btn-cancel">
                        <i class="bi bi-x-lg" style="font-size: 21px; color: white"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="card">
    <div class="card-body">
        <div class="table-top">
            <div class="search-set">
                <div class="search-input">
                    <a class="btn btn-searchset"><img src="~/assets/img/icons/search-white.svg" alt="img"></a>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table  datanew">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rol in ViewBag.RolesAsignados)
                    {
                        <tr>
                            <td>@rol</td>
                            <td>
                                <a class="me-3" onclick="showConfirmDeleteAlert('Usuario', 'EliminarRolDeUsuario', '?idUsuario=@Model.Id&rol=@rol')">
                                    <img src="~/assets/img/icons/delete.svg" alt="img">
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
