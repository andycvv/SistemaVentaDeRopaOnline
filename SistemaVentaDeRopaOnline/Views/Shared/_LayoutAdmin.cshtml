<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, invoice, html5, responsive, Projects">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>FASHION - Sistema de Ventas</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <link rel="stylesheet" href="~/assets/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
    <div id="global-loader">
        <div class="whirly-loader"> </div>
    </div>

    <div class="main-wrapper">

        <div class="header">

            <div class="header-left active">
                <a href="index.html" class="logo">
                    FASHION
                </a>
                <a href="index.html" class="logo-small">
                    <img src="~/assets/img/logo-small.png" alt="">
                </a>
                <a id="toggle_btn" href="javascript:void(0);">
                </a>
            </div>

            <a id="mobile_btn" class="mobile_btn" href="#sidebar">
                <span class="bar-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
            </a>

            <ul class="nav user-menu">
                <li class="nav-item dropdown has-arrow main-drop">
                    <a href="javascript:void(0);" class="dropdown-toggle nav-link userset" data-bs-toggle="dropdown">
                        <span class="user-img">
                            <img src="~/assets/img/profiles/avator1.png" alt="">
                            <span class="status online"></span>
                        </span>
                    </a>
                    <div class="dropdown-menu menu-drop-user">
                        <div class="profilename">
                            <div class="profileset">
                                <span class="user-img">
                                    <img src="~/assets/img/profiles/avator1.png" alt="">
                                    <span class="status online"></span>
                                </span>
                                <div class="profilesets">
                                    @{
                                        string nombreUsuario = User.Identity?.IsAuthenticated == true ? User.Identity.Name : "John Doe";
                                        string rolUsuario = "Cliente";

                                        if (User.Identity?.IsAuthenticated == true)
                                        {
                                            if (User.IsInRole("Administrador"))
                                            {
                                                rolUsuario = "Administrador";
                                            }
                                            else if (User.IsInRole("Vendedor"))
                                            {
                                                rolUsuario = "Vendedor";
                                            }
                                        }
                                        else
                                        {
                                            rolUsuario = "Admin";
                                        }
                                    }

                                    <h6>@nombreUsuario</h6>
                                    <h5>@rolUsuario</h5>
                                </div>
                            </div>
                            <a class="dropdown-item logout pb-0" asp-action="Logout" asp-controller="Seguridad"><img src="~/assets/img/icons/log-out.svg" class="me-2" alt="img">Cerrar Sesión</a>
                        </div>
                    </div>
                </li>
            </ul>


            <div class="dropdown mobile-user-menu">
                <a href="javascript:void(0);" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" asp-action="Login" asp-controller="Seguridad">Cerrar Sesión</a>
                </div>
            </div>

        </div>


        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li>
                            <a asp-action="Panel" asp-controller="Venta"><img src="~/assets/img/icons/dashboard.svg" alt="img"><span> Panel</span> </a>
                        </li>
                        <li class="submenu">
                            <a href="javascript:void(0);"><img src="~/assets/img/icons/product.svg" alt="img"><span> Producto</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a asp-action="Listar" asp-controller="Producto">Listado</a></li>
                                <li><a asp-action="Crear" asp-controller="Producto">Registro</a></li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="javascript:void(0);"><img src="~/assets/img/icons/product.svg" alt="img"><span> Talla</span> <span class="menu-arrow"></span></a>
                            <ul>
                                <li><a asp-action="Listar" asp-controller="Talla">Listado</a></li>
                                <li><a asp-action="Crear" asp-controller="Talla">Registro</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="page-wrapper">
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>


    <script src="~/assets/js/jquery-3.6.0.min.js"></script>

    <script src="~/assets/js/feather.min.js"></script>

    <script src="~/assets/js/jquery.slimscroll.min.js"></script>

    <script src="~/assets/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

    <script src="~/assets/plugins/select2/js/select2.min.js"></script>

    <script src="~/assets/js/script.js"></script>

    <script src="~/assets/plugins/sweetalert/alertas.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        var alertMessage = "@TempData["AlertMessage"]";
        var alertType = "@TempData["AlertType"]";

        if (alertMessage != null)
        {
            if (alertType === "error")
            {
                showErrorAlert(alertMessage);
            }
            else if(alertType === "success")
            {
                showSuccessAlert(alertMessage);
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


