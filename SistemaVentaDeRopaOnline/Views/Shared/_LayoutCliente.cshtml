<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FASHION - Sistema de Ventas</title>
    <script type="importmap"></script>
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaVentasRopa.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .nav-item {
            border-bottom: 2px solid transparent;
            transition: border-color 0.3s ease;
        }

        .nav-item:hover {
            border-bottom: 2px solid black;
        }
    </style>
</head>
<body class="mb-0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-4">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between fw-medium">
                    <a class="navbar-brand fs-3" asp-area="" asp-controller="Producto" asp-action="Index">FASHION</a>
                    <ul class="navbar-nav gap-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-route-genero="Hombre" asp-controller="Producto" asp-action="Index">Hombre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-route-genero="Mujer" asp-controller="Producto" asp-action="Index">Mujer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-route-genero="Niño" asp-controller="Producto" asp-action="Index">Niño</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-route-genero="Niña" asp-controller="Producto" asp-action="Index">Niña</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav gap-3 align-items-center">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person fs-3"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Mi cuenta</a></li>
                                <li><a class="dropdown-item" href="#">Iniciar sesión</a></li>
                                <li><a class="dropdown-item" href="#">Cerrar sesión</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pedido" asp-action="Index">
                                <i class="bi bi-cart fs-4"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container-fluid pb-3 min-vh-100">
        @RenderBody()
    </main>

    <footer class="text-center text-lg-start text-white"
            style="background-color: #1c2331">
        <section class="py-3">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold">FASHION</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p>
                            Sistema de Ventas de Ropa Online para la empresa FASHION.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Productos</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p>
                            <a class="nav-link text-white" asp-route-genero="Hombre" asp-controller="Producto" asp-action="Index">Hombre</a>
                        </p>
                        <p>
                            <a class="nav-link text-white" asp-route-genero="Mujer" asp-controller="Producto" asp-action="Index">Mujer</a>
                        </p>
                        <p>
                            <a class="nav-link text-white" asp-route-genero="Niño" asp-controller="Producto" asp-action="Index">Niño</a>
                        </p>
                        <p>
                            <a class="nav-link text-white" asp-route-genero="Niña" asp-controller="Producto" asp-action="Index">Niña</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Useful links</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p>
                            <a href="#!" class="text-white">Your Account</a>
                        </p>
                        <p>
                            <a href="#!" class="text-white">Become an Affiliate</a>
                        </p>
                        <p>
                            <a href="#!" class="text-white">Shipping Rates</a>
                        </p>
                        <p>
                            <a href="#!" class="text-white">Help</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Contacto</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p><i class="fas fa-home mr-3"></i> Lima, Miraflores 10012, PE</p>
                        <p><i class="fas fa-envelope mr-3"></i> fashion@gmail.com</p>
                        <p><i class="fas fa-phone mr-3"></i> + 51 234 567 88</p>
                        <p><i class="fas fa-print mr-3"></i> + 51 234 567 89</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
