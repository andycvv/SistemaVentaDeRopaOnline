@model SistemaVentaDeRopaOnline.Models.Talla
@{
    ViewData["title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Modificar Talla</h4>
        <h6>Editar su talla</h6>
    </div>
</div>

<form asp-action="Editar" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input class="form-control" value="@Model.Id" asp-for="Id" readonly>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Nombre">Nombre</label>
                        <input type="text" asp-for="Nombre">
                        @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="EsActivo">Estado</label>
                        <select class="select" asp-for="Estado">
                            <option value="true">Activado</option>
                            <option value="false">Desactivado</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-submit me-2">Actualizar</button>
                    <a asp-action="Listar" asp-controller="Talla" class="btn btn-cancel">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</form>