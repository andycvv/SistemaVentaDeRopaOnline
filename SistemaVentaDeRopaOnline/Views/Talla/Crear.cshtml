@model SistemaVentaDeRopaOnline.Models.Talla
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Agregar Talla</h4>
        <h6>Crear nueva talla</h6>
    </div>
</div>

<form asp-action="Crear" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Nombre">Nombre</label>
                        <input type="text" asp-for="Nombre">
                        @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-submit me-2">Registrar</button>
                    <a asp-action="Listar" asp-controller="Talla" class="btn btn-cancel">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</form>

