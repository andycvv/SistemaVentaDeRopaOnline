@model SistemaVentaDeRopaOnline.Models.Producto

@{
    ViewData["title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Modificar Producto</h4>
        <h6>Editar su producto</h6>
    </div>
</div>

<form asp-action="Editar" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input class="form-control" value="@Model.Id" asp-for="Id" readonly style="border: 1px solid rgba(145, 158, 171, .32); height: 40px; width: 100%; font-size: 14px; font-weight: 500; color: #637381; padding: 10px 15px; border-radius: 5px">
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Nombre">Nombre</label>
                        <input type="text" asp-for="Nombre">
                        @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Precio">Precio</label>
                        <input type="number" asp-for="Precio" step="0.01" min="0.00" onblur="if(this.value==='') this.value='0.00'" class="form-control" style="border: 1px solid rgba(145, 158, 171, .32); height: 40px; width: 100%; font-size: 14px; font-weight: 500; color: #637381; padding: 10px 15px; border-radius: 5px">
                        @Html.ValidationMessageFor(x => x.Precio, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Genero">Género</label>
                        <select class="select" asp-for="Genero">
                            <option value="Hombre">Hombre</option>
                            <option value="Mujer">Mujer</option>
                            <option value="Unisex">Unisex</option>
                            <option value="Niño">Niño</option>
                            <option value="Niña">Niña</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="Descripcion">Descripción</label>
                        <textarea class="form-control" asp-for="Descripcion" style="color: #637381"></textarea>
                        @Html.ValidationMessageFor(x => x.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Marca">Marca</label>
                        <input type="text" asp-for="Marca">
                        @Html.ValidationMessageFor(x => x.Marca, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="CategoriaId">Categoría</label>
                        <select class="select" asp-for="CategoriaId" asp-items="@ViewBag.Categorias"></select>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="EsActivo">Estado</label>
                        <select class="select" asp-for="Estado">
                            <option value="true">Activado</option>
                            <option value="false">Desactivado</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-submit me-2">Actualizar</button>
                    <a asp-action="Listar" asp-controller="Producto" class="btn btn-cancel">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</form>