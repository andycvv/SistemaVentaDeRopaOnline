@model SistemaVentaDeRopaOnline.Models.Inventario
@{
    ViewData["title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Modificar Inventario</h4>
        <h6>Editar su inventario</h6>
    </div>
</div>

<form asp-action="Editar" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input class="form-control" value="@Model.Id" asp-for="Id" readonly style="border: 1px solid rgba(145, 158, 171, .32); height: 40px; width: 100%; font-size: 14px; font-weight: 500; color: #637381; padding: 10px 15px; border-radius: 5px">
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="ProductoId">Producto</label>
                        <select class="select" asp-for="ProductoId" asp-items="@ViewBag.Productos"></select>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="TallaId">Talla</label>
                        <select class="select" asp-for="TallaId" asp-items="@ViewBag.Tallas"></select>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="ColorId">Color</label>
                        <select class="select" asp-for="ColorId" asp-items="@ViewBag.Colores"></select>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Stock">Stock</label>
                        <input type="number" asp-for="Stock" step="1" min="0" onblur="if(this.value==='') this.value='0'" class="form-control" style="border: 1px solid rgba(145, 158, 171, .32); height: 40px; width: 100%; font-size: 14px; font-weight: 500; color: #637381; padding: 10px 15px; border-radius: 5px">
                        @Html.ValidationMessageFor(x => x.Stock, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="EsActivo">Estado</label>
                        <select class="select" asp-for="Estado">
                            <option value="true">Activado</option>
                            <option value="false">Desactivado</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-submit me-2">Actualizar</button>
                    <a asp-action="Listar" asp-controller="Inventario" class="btn btn-cancel">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</form>