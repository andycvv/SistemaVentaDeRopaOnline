@model SistemaVentaDeRopaOnline.Models.ViewModels.DashboardViewModel;
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-6 col-sm-6 col-12">
        <div class="dash-widget">
            <div class="dash-widgetimg">
                <span><img src="assets/img/icons/dash1.svg" alt="img"></span>
            </div>
            <div class="dash-widgetcontent">
                <h5>S/. <span class="counters" data-count="@Model.GananciasPendientes">@Model.GananciasPendientes</span></h5>
                <h6>Ganancias pendientes</h6>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-sm-6 col-12">
        <div class="dash-widget dash1">
            <div class="dash-widgetimg">
                <span><img src="assets/img/icons/dash2.svg" alt="img"></span>
            </div>
            <div class="dash-widgetcontent">
                <h5>S/. <span class="counters" data-count="@Model.GananciasConfirmadas">@Model.GananciasConfirmadas</span></h5>
                <h6>Ganancias confirmadas</h6>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-12 d-flex">
        <div class="dash-count">
            <div class="dash-counts">
                <h4>@Model.TotalClientes</h4>
                <h5>Clientes</h5>
            </div>
            <div class="dash-imgs">
                <i data-feather="user"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-12 d-flex">
        <div class="dash-count das1">
            <div class="dash-counts">
                <h4>@Model.TotalProductos</h4>
                <h5>Total de productos</h5>
            </div>
            <div class="dash-imgs">
                <i data-feather="user-check"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-12 d-flex">
        <div class="dash-count das2">
            <div class="dash-counts">
                <h4>@Model.TotalPedidos</h4>
                <h5>Total de pedidos</h5>
            </div>
            <div class="dash-imgs">
                <i data-feather="file-text"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-12 d-flex">
        <div class="dash-count das3">
            <div class="dash-counts">
                <h4>@Model.TotalVentas</h4>
                <h5>Total de ventas</h5>
            </div>
            <div class="dash-imgs">
                <i data-feather="file"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <h2 class="mb-3 fw-bold">Últimos productos creados</h2>
    @foreach (var producto in Model.UltimosProductosCreados)
    {
        <div class="col-lg-2 col-sm-4 col-6">
            <div class="product-widget">
                <div class="product-widgetimg">
                    @if (producto.ImagenProductos.Count > 0)
                    {
                        <img src="@producto.ImagenProductos.First().Url" alt="@producto.Nombre">
                    }
                    else
                    {
                        <img src="~/img/no-imagen.jpg" alt="img">
                    }
                </div>
                <div class="product-widgetcontent">
                    <h6>@(producto.Nombre.Length > 20 ? producto.Nombre.Substring(0, 20) + "..." : producto.Nombre)</h6>
                    <p>S/. @producto.Precio</p>
                </div>
            </div>
        </div>
    }
</div>
