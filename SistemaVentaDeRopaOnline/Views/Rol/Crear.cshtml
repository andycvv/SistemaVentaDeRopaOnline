@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Agregar Rol</h4>
        <h6>Crear nuevo rol</h6>
    </div>
</div>

<form asp-action="Crear" asp-controller="Rol" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="roleName">Nombre del Rol</label>
                        <input type="text" name="roleName" class="form-control" required>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-submit me-2">Registrar</button>
                    <a asp-action="Listar" asp-controller="Rol" class="btn btn-cancel">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</form>
