@model SistemaVentaDeRopaOnline.Models.Categoria

@{
    ViewData["title"] = "Editar Categoría";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Modificar Categoría</h4>
        <h6>Editar su categoría</h6>
    </div>
</div>

<form asp-action="Editar" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input class="form-control" value="@Model.Id" asp-for="Id" readonly style="border: 1px solid rgba(145, 158, 171, .32); height: 40px; width: 100%; font-size: 14px; font-weight: 500; color: #637381; padding: 10px 15px; border-radius: 5px">
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Nombre">Nombre</label>
                        <input type="text" asp-for="Nombre" class="form-control" style="border: 1px solid rgba(145, 158, 171, .32); height: 40px; width: 100%; font-size: 14px; font-weight: 500; color: #637381; padding: 10px 15px; border-radius: 5px">
                        @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Estado">Estado</label>
                        <select asp-for="Estado" class="form-control select2">
                            <option value="true">Activado</option>
                            <option value="false">Desactivado</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-submit me-2">Actualizar</button>
                    <a asp-action="Listar" asp-controller="Categoria" class="btn btn-cancel">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                minimumResultsForSearch: Infinity // Oculta el campo de búsqueda si no es necesario
            });
        });
    </script>
}