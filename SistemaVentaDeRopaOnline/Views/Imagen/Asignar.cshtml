@model SistemaVentaDeRopaOnline.Models.ViewModels.AsignarImagenesViewModel
@{
    ViewData["title"] = "Asignar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Añadir Imagen</h4>
        <h6>Asignar imagenes</h6>
    </div>
</div>

<form asp-action="Asignar" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="ProductoId">Id del Producto</label>
                        <input class="form-control" value="@Model.Producto.Id" name="ProductoId" readonly style="border: 1px solid rgba(145, 158, 171, .32); height: 40px; width: 100%; font-size: 14px; font-weight: 500; color: #637381; padding: 10px 15px; border-radius: 5px">
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label for="Url">URL de la Imagen</label>
                        <input type="text" name="Url">
                    </div>
                </div>
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-submit me-2">
                        <i class="bi bi-plus-lg" style="font-size: 21px; color: white"></i> Asignar Imagen
                    </button>
                    <a asp-action="Listar" asp-controller="Producto" class="btn btn-cancel">
                        <i class="bi bi-x-lg" style="font-size: 21px; color: white"></i> Cancelar
                    </a>
                </div>  
            </div>
        </div>
    </div>
</form>

<div class="card">
    <div class="card-body">
        <div class="table-top">
            <div class="search-set">
                <div class="search-input">
                    <a class="btn btn-searchset"><img src="~/assets/img/icons/search-white.svg" alt="img"></a>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table  datanew">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Imagen</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var imagen in Model.Imagenes)
                    {
                        <tr>
                            <td>@imagen.Id</td>
                            <td>
                                <img src="@imagen.Url" style="width: 100px" />
                            </td>
                            <td>
                                <a class="me-3" onclick="showConfirmDeleteAlert('Producto', 'Eliminar', @imagen.Id)">
                                    <img src="~/assets/img/icons/delete.svg" alt="img">
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
